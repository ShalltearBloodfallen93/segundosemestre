package lavadora_uno;
import Libreria.LLFunciones;
import java.util.Scanner;


public class Lavadora_uno {
    public static void main(String[] args) {
        Scanner entrada = new Scanner (System.in);
        
        System.out.println("¿La ropa es blanca o de color?");
        System.out.println("Presiona 1 - ropa blanca / 2 - ropa de color. ");
        int TipoDeRopa = entrada.nextInt();
        
        System.out.println("¿Cuantos kilos de ropa?");
        int kilos = entrada.nextInt();
        
        LLFunciones comunicador = new LLFunciones(kilos, TipoDeRopa);
        comunicador.setTipoDeRopa(2);//se le coloco un nuevo valor a la variable de otra clase, con el metodo set
        System.out.println("El tipo de ropa es: " + comunicador.getTipoDeRopa()); //se pidio imprimir el valor de esa variable, con el metodo get.
        comunicador.CicloFinalizado();
    }
    
}
